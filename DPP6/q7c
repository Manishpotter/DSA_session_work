class Solution {
  public:
    // Function to return the diameter of a Binary Tree.
    
    int dia(Node* root,int &ans){
        if(root==NULL) return 0;
        int l = dia(root->left,ans);
        int r = dia(root->right,ans);
        ans = max(ans,l+r);
        return 1+max(l,r);
    }
    int diameter(Node* root) {
        // Your code here
        int ans=0;
        dia(root,ans);
        return ans;
    }
};
